@model IEnumerable<FoodPriceComparison.Models.PlatformPrice>

@{
    ViewData["Title"] = "Price Comparison Results";

    // Dictionary for dynamic platform links
    var platformLinks = new Dictionary<string, string>
    {
        { "Swiggy", "https://www.swiggy.com" },
        { "Zomato", "https://www.zomato.com" },
        { "UberEats", "https://www.ubereats.com" }
    };
}

<div class="container mt-5">
    <h2 class="text-center">🍕 Price Comparison Results</h2>
    <p class="text-center text-muted">Sorted by lowest price</p>

    <table class="table table-hover mt-4 shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Dish</th>
                <th>Platform</th>
                <th>Price (₹)</th>
                <th>Link</th> <!-- New Link column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DishName</td>
                    <td>@item.PlatformName</td>
                    <td>@item.Price.ToString("0.00")</td>
                    <td>
                        @if (platformLinks.ContainsKey(item.PlatformName))
                        {
                            <a href="@platformLinks[item.PlatformName]" target="_blank" class="btn btn-sm btn-primary">
                                Visit Site
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">🔙 Back to Search</a>
    </div>
</div>
