@{
    ViewData["Title"] = "Search Food Prices";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2>🍔 Search Food Prices</h2>
        <p class="text-muted">Find the best deals across platforms</p>
    </div>

    <form method="post" asp-action="Search">
        <div class="input-group mb-3">
            <input id="dishSearch" type="text" name="query" class="form-control" placeholder="Enter a dish name (e.g., Pizza, Burger)" required>
            <button class="btn btn-primary" type="submit">🔍 Search</button>
        </div>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-warning">@ViewBag.Error</div>
    }
</div>

<!-- jQuery + jQuery UI for autocomplete -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">

<script>
    $(function () {
        $("#dishSearch").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '@Url.Action("GetDishSuggestions", "PriceCompare")',
                    type: 'GET',
                    data: { term: request.term },
                    success: function (data) {
                        response(data);
                    },
                    error: function() {
                        response([]);
                    }
                });
            },
            minLength: 1
        });
    });
</script>
 
